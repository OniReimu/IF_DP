{
  "experiment_name": "hybrid_manual_and_grid_example",
  "description": "Example showing manual experiments + parameter grid in same config",
  "base_command": "uv run main.py",
  "common_args": {
    "k": 64,
    "epochs": 20,
    "delta": 1e-6,
    "mps": true,
    "run-mia": true
  },
  "experiments": [
    {
      "name": "special_high_privacy",
      "description": "Special high-privacy experiment with custom settings",
      "target-epsilon": 0.5,
      "users": 50,
      "dp-layer": "all",
      "positively_correlated_noise": true,
      "full-complement-noise": true
    },
    {
      "name": "baseline_comparison",
      "description": "Baseline comparison without DP",
      "target-epsilon": 100.0,
      "users": 100,
      "dp-layer": "conv1",
      "negatively_correlated_noise": true
    }
  ],
  "parameter_grid": {
    "target-epsilon": [2.0, 8.0],
    "users": [100, 200],
    "noise_strategy": ["positive", "negative"]
  },
  "output_settings": {
    "results_dir": "validation_results",
    "save_logs": false
  }
} 